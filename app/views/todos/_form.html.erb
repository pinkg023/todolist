<div class="form container">

  <%= form_for @todo do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name , class: "form-control" %>
  </div>

<!--
  <% if :finished == true %>
    <%= check_box("tag", tag.id, {checked: true }) %>
  <% else %>
    <%= check_box("tag", tag.id, {checked: false }) %>
  <% end %>
-->



  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.text_field :due_date , class: "form-control" %>
  </div>


  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :desc, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :finished  %>
    <%= f.check_box :finished  %>
  </div>

    <%= f.submit %>
  <% end %>

</div>

<% if @todo.errors.present? %>
  <ul>
    <% @todo.errors.each do |error, message| %>
      <li> <%= "#{error.capitalize}  #{message}" %></li>
    <% end %>
  </ul>
<% end %>