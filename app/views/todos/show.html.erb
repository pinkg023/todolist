<div class="form container">

  <%= form_for @todo do |f| %>

   <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name , class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :due_date %>
    <%= f.text_field :due_date , class: "form-control" %>
  </div>

   <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :desc, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :finished  %>
    <%= f.check_box :finished  %>
  </div>

  <%= link_to '回到事項列表', todos_path %>

  <% end %>

</div>


